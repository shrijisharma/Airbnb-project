<style>
.search-btn {
     background-color: #fe424d !important;
    color: #fff !important;
    border-radius: 25px !important;
   padding: 0 1rem 0 1rem;
  }
 

  .search-btn:hover {
    background-color: #e83c46 !important;
    color: #fff !important;
  }

  .search-input {
    border-radius: 25px !important;
    padding: 0.5rem 3rem 0.5rem 3rem  !important;
    font-size:1rem  !important;
  }

  .search-input::placeholder {
    color: #888 !important;
    font-size: 0.95rem !important;
  }

  .search-btn i {
     display: inline;
    margin-right: 0.5rem;
  }
  .search {
  flex: 1 1 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  order: 2;
}

</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <!-- LOGO + Explore -->
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-regular fa-compass"></i>
      <span class="ms-2">Explore</span>
    </a>

    <!-- Hamburger button for mobile -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#mobileMenu"
      aria-controls="mobileMenu"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Desktop search form + links -->
    <div class="collapse navbar-collapse">
      <div class="navbar-nav ms-auto me-auto search">
        <form class="d-flex my-2 my-md-0" role="search">
          <input
            class="form-control me-2 search-input"
            type="search"
            placeholder="Search destinations"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Log In</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Log Out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<!-- Offcanvas (mobile slide-out menu) -->
<div
  class="offcanvas offcanvas-end"
  tabindex="-1"
  id="mobileMenu"
  aria-labelledby="mobileMenuLabel"
>
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="mobileMenuLabel">
      Menu
    </h5>
    <button
      type="button"
      class="btn-close text-reset"
      data-bs-dismiss="offcanvas"
      aria-label="Close"
    ></button>
  </div>
  <div class="offcanvas-body">
    <ul class="navbar-nav">
      <li class="nav-item mb-2">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
      </li>

      <% if (!currUser) { %>
        <li class="nav-item mb-2">
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
        </li>
        <li class="nav-item mb-2">
          <a class="nav-link" href="/login"><b>Log In</b></a>
        </li>
      <% } else { %>
        <li class="nav-item mb-2">
          <a class="nav-link" href="/logout"><b>Log Out</b></a>
        </li>
      <% } %>
    </ul>
  </div>
</div>


